# EXASPERATION Frontend Configuration
# Local development settings

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_THEME_PRIMARY_COLOR=#0066CC
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_LOG_LEVEL=debug
STREAMLIT_SERVER_ENABLE_STATIC_SERVING=true

# API Configuration
# The /v1 prefix is added in the URL to match the API's router (frontend/api/routes.py)
EXASPERATION_API_URL=http://localhost:8888/v1
EXASPERATION_API_KEY=dev_api_key_for_testing
EXASPERATION_API_TIMEOUT=30

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_AUTHENTICATION=false
ENABLE_ADVANCED_FILTERS=true
ENABLE_SUGGESTIONS=true
ENABLE_MOCK_FALLBACKS=false
SHOW_API_ERRORS=true